        <activity
            android:name="com.example.brunobarros.hifootball.Anotar_Eventos"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.brunobarros.hifootball.Pop"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Pop" />
        <activity
            android:name="com.example.brunobarros.hifootball.Login"
            android:theme="@style/AppTheme.Pop" />
        <activity
            android:name="com.example.brunobarros.hifootball.Falta"
            android:theme="@style/AppTheme.Pop" />
        <activity
            android:name="com.example.brunobarros.hifootball.Pagina_Inicial"
            android:theme="@style/AppTheme.Pop" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.brunobarros.hifootball.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>