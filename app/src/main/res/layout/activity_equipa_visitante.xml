<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/metadedocampodefutebol"
    android:rotationY="180"
    tools:context="com.example.brunobarros.hifootball.VisitingTeam">

    <GridLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:rowCount="11"
        >

        <Button
            android:id="@+id/btremate"
            android:layout_column="0"
            android:layout_row="1"
            android:text="R\ne\nm\na\nt\ne\n"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:rotationY="180"
            android:layout_width="35dp" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="2" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="3" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="4" />
        <Space
            android:layout_height="180dp"
            android:layout_column="2"
            android:layout_row="5" />
        <Button
            android:id="@+id/btgolo"
            android:layout_column="0"
            android:layout_row="5"
            android:text="G\no\nl\no"
            android:layout_gravity="center"
            android:enabled="false"
            android:rotationY="180"
            android:layout_width="35dp" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="6" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="7" />
        <Space
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="8" />
        <Space
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="10" />
        <Space
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="9" />
        <Button
            android:id="@+id/btcanto"
            android:layout_column="0"
            android:layout_row="9"
            android:text="C\na\nn\nt\no\n"
            android:enabled="false"
            android:rotationY="180"
            android:layout_width="35dp" />
        <Button
            android:id="@+id/btcruzamento"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="11dp"
            android:textAllCaps="false"
            android:enabled="false"
            android:rotationY="180"
            android:text="Cruzamento" />
        <Button
            android:id="@+id/btpenalti"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Penalti" />
        <Button
            android:id="@+id/bttroca"
            android:layout_column="4"
            android:layout_row="0"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:rotationY="-180"
            android:text="Troca" />
        <Button
            android:id="@+id/btlivre"
            android:layout_column="3"
            android:layout_row="0"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Livre" />
        <Button
            android:id="@+id/btinicio"
            android:layout_column="6"
            android:layout_row="0"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:rotationY="180"
            android:text="Confimar" />
        <Button
            android:id="@+id/btpasse"
            android:layout_column="1"
            android:layout_row="10"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Passe" />
        <Button
            android:id="@+id/btperda"
            android:layout_column="2"
            android:layout_row="10"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Perda" />
        <Button
            android:id="@+id/btlancamento"
            android:layout_column="3"
            android:layout_row="10"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Lancamento" />
        <Button
            android:id="@+id/btsubstituicao"
            android:layout_column="4"
            android:layout_row="10"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:enabled="false"
            android:rotationY="180"
            android:text="Substituicao" />
        <Button
            android:id="@+id/btGR"
            android:layout_column="1"
            android:layout_row="5"
            android:text="GR"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btDE"
            android:layout_column="2"
            android:layout_row="1"
            android:text="DE"
            android:textAllCaps="false"
            android:rotationY="-180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btDC1"
            android:layout_column="2"
            android:layout_row="4"
            android:textAllCaps="false"
            android:rotationY="180"
            android:text="DC" />
        <Button
            android:id="@+id/btDC2"
            android:layout_column="2"
            android:layout_row="6"
            android:text="DC"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="right"/>
        <Button
            android:id="@+id/btDD"
            android:layout_column="2"
            android:layout_row="9"
            android:text="DD"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btMDC"
            android:layout_column="3"
            android:layout_row="5"
            android:text="MDC"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btMC1"
            android:layout_column="4"
            android:layout_row="4"
            android:textAllCaps="false"
            android:rotationY="180"
            android:text="MC" />
        <Button
            android:id="@+id/btMC2"
            android:layout_column="4"
            android:layout_row="6"
            android:textAllCaps="false"
            android:rotationY="180"
            android:text="MC" />
        <Button
            android:id="@+id/btMOE"
            android:layout_column="5"
            android:layout_row="1"
            android:text="MOE"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btMOD"
            android:layout_column="5"
            android:layout_row="9"
            android:text="MOD"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btPL"
            android:layout_column="6"
            android:layout_row="5"
            android:text="PL"
            android:textAllCaps="false"
            android:rotationY="180"
            android:layout_gravity="center" />
    </GridLayout>

</RelativeLayout>
